<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="20dp"
    android:insetRight="20dp">
    <layer-list>
        <item>
            <shape>
                <stroke
                    android:width="2dp"
                    android:color="#AFAFAF" />
                <solid android:color="#FFFFFF" />
                <corners android:radius="10dp" />
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
            </shape>
        </item>
    </layer-list>
</inset>